<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/deviceButton"
        android:layout_width="360dp"
        android:layout_height="100dp"
        android:background="@drawable/custom_room_button"
        android:fontFamily="@font/dosis_medium"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/cloudImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:elevation="20dp"
        android:src="@drawable/ic_cloud"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/deviceButton"
        app:layout_constraintStart_toStartOf="@+id/deviceButton"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/switchOnOff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_switch"
        android:elevation="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/deviceButton"
        app:layout_constraintEnd_toEndOf="@+id/deviceButton"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <TextView
        android:id="@+id/deviceNameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/air_conditioner"
        android:elevation="20dp"
        android:fontFamily="@font/dosis_medium"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/deviceButton"
        app:layout_constraintEnd_toStartOf="@+id/switchOnOff"
        app:layout_constraintStart_toEndOf="@+id/cloudImage"
        app:layout_constraintTop_toTopOf="@+id/deviceButton" />


</androidx.constraintlayout.widget.ConstraintLayout>